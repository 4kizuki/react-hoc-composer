{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "pretty": true,
    "newLine": "lf",
    "lib": ["esnext"],
    "types": ["node", "react"]
  },
  "include": ["src/**/*.ts", "src/*.ts"]
}
